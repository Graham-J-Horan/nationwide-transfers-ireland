---
// src/pages/thanks.astro
import MainLayout from "../layouts/MainLayout.astro";
import ProgressBar from "../components/ProgressBar.astro";
//const redirectUrl = Astro.site ? new URL(Astro.site).origin : "/";
---

<MainLayout>
  <main class="min-h-screen flex items-center justify-center bg-gray-50 px-4">
    <div class="max-w-md w-full bg-white p-8 rounded-xl shadow-lg text-center">
      <!-- Checkmark Icon -->
      <div
        class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100 mb-6"
      >
        <svg
          class="h-10 w-10 text-green-500"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 13l4 4L19 7"></path>
        </svg>
      </div>

      <!-- Success Message -->
      <h1 class="text-2xl font-bold text-gray-800 mb-2">Message Sent!</h1>
      <p class="text-gray-600 mb-6">
        Thank you for contacting us. We'll get back to you shortly.
      </p>

      <ProgressBar />

      <!-- Redirect Script (place right after progress bar) -->

      <!-- Manual Redirect Button 
      <a
        href={redirectUrl}
        class="inline-block px-6 py-3 bg-gray-800 text-white rounded-lg hover:bg-gray-700 transition-colors"
      >
        Return Home Now
      </a>-->
    </div>
  </main>
</MainLayout>
