---
import { Image } from "astro:assets";
import heroimage from "../images/heroimg.avif";
---

<section
  class="hero-bg min-h-screen flex items-center relative overflow-hidden"
  id="home"
>
  <div class="absolute inset-0 opacity-20">
    <Image src={heroimage} alt="A bird sitting on a nest of eggs." />
    <!-- <img
      src="../images/heroimage.jpg"
      alt="Luxury car"
      class="w-full h-full object-cover"
    /> -->
  </div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center">
      <h1 class="text-5xl md:text-7xl font-bold mb-6" id="hero-title">
        <span class="text-gradient">Premium</span><br />
        <span class="text-white">Chauffeur Services</span>
      </h1>
      <p
        class="text-xl md:text-2xl text-gray-300 mb-8 max-w-3xl mx-auto"
        id="hero-subtitle"
      >
        Experience luxury transportation with our professional chauffeur
        services. Reliable, elegant, and always on time.
      </p>
      <div
        class="flex flex-col sm:flex-row gap-4 justify-center"
        id="hero-buttons"
      >
        <a href="/contact"
          ><button
            class="border-2 border-yellow-500 bg-yellow-500 text-black px-8 py-4 rounded-lg text-lg font-semibold hover:bg-yellow-400 transition-all transform hover:scale-105"
          >
            Book Now
          </button></a
        >
        <a href="/pricing"
          ><button
            class="border-2 border-yellow-500 text-yellow-500 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-yellow-500 hover:text-black transition-all"
          >
            Pricing
          </button></a
        >
      </div>
    </div>
  </div>
  <div
    class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce"
    id="scroll-indicator"
  >
    <svg
      class="w-6 h-6 text-yellow-400"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>
<style>
  .hero-bg {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
    margin: 0;
  }
  .text-gradient {
    background: linear-gradient(135deg, #f59e0b, #eab308);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  .glass-effect {
    backdrop-filter: blur(16px);
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
</style>
